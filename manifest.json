{
  "manifest_version": 2,
  "name": "HTTP Indicator",
  "version": "0.0.4",
  "description": "Indicator for HTTP/2 and QUIC support",
  "homepage_url": "https://github.com/pd4d10/http-indicator",
  "icons": {
    "128": "icons/icon.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icons/default.png"
  }
}
